<div class = "pretty">
<h2>Users</h2>
<table border = "2">
  <thead>
      <tr>
        <th>Username</th>
        <th>Password</th>
        <th>Role</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
  </thead>
  <tbody>
{{#users}}
  <tr>
    <td><h3>{{Username}}</h3></td>
    <td><h3>{{Password}}</h3></td>
    <td><h3>{{Role}}</h3></td>
    <td><button type="button" class="btn btn-default"><a href="/users/edit/{{Id}}">Edit</a></button></td>
    <td><button type="button" class="btn btn-default"><a href="/users/delete/{{Id}}">Delete</a></button></td>
  </tr> 
{{/users}}
</tbody>
</table>

{{#empty}}
  <p>The list is empty.</p>
{{/empty}}

<div id="add">
	
	<h2>Add a user</h2>
	<form action="users/add" method="POST">
		Username: <input type="text" name="username">
		Password: <input type="password" name="password">
		Role: <input type="text" name="role"> 
		<br />     
    	<input type="submit">
	</form>
</div>
</div>
